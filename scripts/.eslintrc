{
  "parser": "babel-eslint",
  "extends": "airbnb/base",

  "plugins": [
    "import",
    "i18n-json"
  ],

  "rules": {
    "no-tabs": 0,
    "import/extensions": [0, "never"],
    "lines-between-class-members": [2],
    "max-len": [2, 180, 4],
    "semi": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "arrow-parens": [2, "always"],
    "comma-dangle": [0, "never"],
    "complexity": [0],
    "import/no-unresolved": [2],
    "import/no-commonjs": [2],
    "import/order": [2, {"newlines-between": "always"}],
    "jsx-a11y/anchor-is-valid": [0],
    "jsx-a11y/click-events-have-key-events": [0],
    "jsx-a11y/label-has-for": [0],
    "jsx-a11y/no-static-element-interactions": [0],
    "newline-per-chained-call": [2, { "ignoreChainWithDepth": 2 }],
    "no-console": [0],
    "no-unused-vars": [0],
    "object-shorthand": [0],
    "padding-line-between-statements": [2, { "blankLine": "always", "prev": "*", "next": ["break", "case", "default", "class", "export", "for", "function", "if", "return", "switch", "throw", "try", "while"] }],
    "react/jsx-filename-extension": [0],
    "react/no-array-index-key": [0],
    "space-return-throw-case": [0],
    "prefer-promise-reject-errors": [0, { "allowEmptyReject": true }],
    "no-unused-expression":[0, { "allowTernary": false }]
  },
  "settings": {
    "import/parser": "babel-eslint"
  }
}